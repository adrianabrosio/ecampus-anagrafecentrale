<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <Console name="Console">
      <PatternLayout pattern="%d{HH:mm:ss} [%t(%L)] %-5level %logger{36} - %msg%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="${sys:LOG_LEVEL:-info}">
      <AppenderRef ref="Console"/>
    </Root>
  </Loggers>
</Configuration>